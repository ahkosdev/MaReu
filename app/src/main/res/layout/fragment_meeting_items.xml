<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

<ImageView
android:id="@+id/meeting_room_icon_img"
android:layout_width="50dp"
android:layout_height="50dp"
android:layout_marginLeft="16dp"
android:layout_marginStart="16dp"
android:layout_marginBottom="10dp"
android:layout_marginTop="10dp"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintStart_toStartOf="parent"/>

<LinearLayout
    android:id="@+id/description_text_lyt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="20dp"
    android:layout_marginLeft="20dp"
    app:layout_constraintStart_toEndOf="@id/meeting_room_icon_img"
    app:layout_constraintBottom_toBottomOf="@id/meeting_room_icon_img"
    app:layout_constraintTop_toTopOf="@id/meeting_room_icon_img">
<TextView
android:id="@+id/meeting_description_txt"
android:layout_width="wrap_content"
    android:layout_height="wrap_content"
android:text=""
android:textSize="14sp"
android:textStyle="bold"

   />

<TextView
    android:id="@+id/entrant_mail_txt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text=""
    android:textSize="12sp"

   />

</LinearLayout>
    <ImageButton
android:id="@+id/meeting_delete_button_btn"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginEnd="16dp"
android:layout_marginRight="16dp"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintTop_toTopOf="@id/description_text_lyt"
app:layout_constraintBottom_toBottomOf="@id/description_text_lyt"
android:src="@drawable/ic_baseline_delete_black_24"
android:background="#ffffff"
    />

    </androidx.constraintlayout.widget.ConstraintLayout>